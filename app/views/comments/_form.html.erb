<%= form_with model: [commentable, Comment.new ], local: true, html: {class: local_assigns[:class]}, data: { target: local_assigns[:target] } do |f|%>
  <div class="form-group">
    <%= f.hidden_field :parent_id, value: local_assigns[:parent_id] %>
    <%= f.text_area :body, class: "form-control", placeholder: "Add Comment", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>